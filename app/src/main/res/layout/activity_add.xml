<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:ems="10"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:labelFor="@id/first_name"
        android:textAlignment="center"
        android:textEditNoPasteWindowLayout="@android:style/Widget.DeviceDefault.EditText" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/first_name"
        android:layout_below="@+id/first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:labelFor="@id/last_name"
        android:textAlignment="center"
        android:textEditNoPasteWindowLayout="@android:style/Widget.DeviceDefault.EditText" />

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/first_name"
        android:layout_below="@+id/last_name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="age_in_months"
        android:inputType="number"
        android:labelFor="@id/age"
        android:textAlignment="center"
        android:textEditNoPasteWindowLayout="@android:style/Widget.DeviceDefault.EditText" />

    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button"
        android:alpha ="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/submit" />

    <Button
        android:id="@+id/back"
        style="@style/Widget.AppCompat.Button"
        android:alpha="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/back" />

</RelativeLayout>